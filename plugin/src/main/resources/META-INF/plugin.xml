<consulo-plugin url="https://github.com/consulo/consulo-database">
	<id>consulo.database</id>
	<name>Database (SQL/NoSQL)</name>
	<category>Database/Custom Languages</category>
	<version>SNAPSHOT</version>
	<vendor>consulo.io</vendor>
	<localize>consulo.database.DatabaseLocalize</localize>

	<tags>
		<tag>database</tag>
		<tag>custom.language</tag>
	</tags>

	<permissions>
		<permission type="SOCKET_CONNECT"/>
		<!--required for search free port on OS for start process-->
		<permission type="SOCKET_BIND"/>
		<permission type="PROCESS_CREATE"/>
		<permission type="GET_ENV"/>
	</permissions>
</consulo-plugin>